generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("NUXT_DB_URL")
}

model ToolEntry {
  id            Int            @id @default(autoincrement())
  createdAt     DateTime       @default(now())
  lastIndexedAt DateTime       @updatedAt
  content       Json
  url           String         @unique
  SubToolEntry  SubToolEntry[]
  examples      Example[]
}

model Example {
  id            Int        @id @default(autoincrement())
  createdAt     DateTime   @default(now())
  lastIndexedAt DateTime   @updatedAt
  name          String     @db.VarChar(255)
  content       Json
  url           String     @unique
  ToolEntry     ToolEntry? @relation(fields: [toolEntryId], references: [id])
  toolEntryId   Int?
}

model SubToolEntry {
  id            Int       @id @default(autoincrement())
  createdAt     DateTime  @default(now())
  lastIndexedAt DateTime  @updatedAt
  name          String    @db.VarChar(255)
  content       Json
  url           String    @unique
  toolEntry     ToolEntry @relation(fields: [toolId], references: [id])
  toolId        Int
}
